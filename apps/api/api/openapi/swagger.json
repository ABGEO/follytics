                "createdAt",
                "id",
                "type"
            ],
            "properties": {
                "createdAt": {
                    "description": "nolint: lll",
                    "type": "string",
                    "example": "1970-01-01T00:00:00.000+04:00"
                },
                "id": {
                    "type": "string",
                    "example": "01955908-d43b-7900-8f5c-5faa67dab4d3"
